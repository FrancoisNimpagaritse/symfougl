{% extends 'admin/base.html.twig' %}

{% block title %}Acceuil - Cursus{% endblock %}

{% block body %}
        <!-- Begin Page Content -->
        <div class="container-fluid">
          <div class="text-center">
          <!-- Page Heading -->
          <h1 class="h3 mb-2 text-gray-800">Cursus académiques</h1>
          </div>
          <!-- DataTales Example -->
          <div class="card shadow mb-4">
            <div class="card-header py-3">
              <div class="row">
                <div class="col-md-5">   
                  <h6 class="m-0 font-weight-bold text-primary">Liste complète</h6>
                </div>
                  
                <div class="col-md-5"></div>
                <div class="col">
                    <a href="{{ path('admin_cursus_create') }}" class="btn btn-sm btn-success">Ajouter un cursus</a>
                </div>
              </div>    
            </div>
         
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                  <thead>
                    <tr>
                      <th>Appelation cursus</th>
                      <th>Type de division</th>
                      <th>Appelation division</th>
                      <th>Actions</th>
                    </tr>
                  </thead>
                  <tfoot>
                    <tr>
                      <th>Appelation cursus</th>
                      <th>Type de division</th>
                      <th>Appelation division</th>
                      <th>Actions</th>
                    </tr>
                  </tfoot>
                  <tbody>
                  {% for curs in cursus %}
                    <tr>
                      <td>{{curs.name}}</td>
                      <td>{{curs.typedivision}}</td>
                      <td>{{curs.appelationdivision}}</td>
                      <td>
                        <a href="{{ path('admin_cursus_edit', {'id':curs.id}) }}" class="btn btn-sm btn-primary"><i class="fas fa-edit"></i></a>
                        <a href="{{ path('admin_cursus_delete', {'id':curs.id}) }}" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></a>
                      </td>
                    </tr>
                  {% endfor %}                    
                  </tbody>
                </table>
              </div>
            </div>
          </div>

        </div>
        <!-- /.container-fluid -->
{% endblock %}
